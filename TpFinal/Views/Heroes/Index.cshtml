@model IEnumerable<TpFinal.Models.Hero>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pouvoir)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identite.IdentiteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pouvoir.PouvoirId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HeroId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HeroId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HeroId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
